<h1>Current Items</h1>

<table class="table table-striped table-hover table-bordered text-center">
  <thead class="table-dark">
    <tr>
      <th>Item</th>
      <th>Quantity</th>
      <th>Owner</th>
      <th>Timestamp</th>
        <th colspan="3"> Options</th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.item %></td>
        <td><%= list.quantity %></td>
        <td><%= list.owner %></td>
        <td><%= list.timestamp %></td>
        <td><%= link_to 'Show', list, class:"btn" %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_list_path(list), class:"btn" %></td>
          <td><%= link_to 'Delete', list, method: :delete, data: { confirm: "Do you confirm deleting #{list.item}?" }, class:"btn" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if user_signed_in? %>
  <%= link_to 'Add', new_list_path, class:"btn btn-dark" %>
<% end %>
