<%= form_with(model: list) do |form| %>
  <% if list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(list.errors.count, "error") %> prohibited this list from being saved:</h2>

      <ul>
        <% list.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :item %>
    <%= form.text_field :item, class:"form-control", placeholder:"E.g. iPhone, Pizza, ...etc" %>
  </div>

  <div class="field form-group">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, class:"form-control", placeholder:"E.g. 512" %>
  </div>

  <div class="field form-group">
    <%= form.label :owner %>
    <%= form.text_field :owner, class:"form-control", placeholder:"E.g. Joana Doe?" %>
  </div>
  
  <br/>
  <div class="field form-group">
    <%= form.label :"Date & " %>
    <%= form.label :"Time" %>
    <%= form.datetime_select :timestamp, class:"form-select", class:"form-select" %>
  </div>
  <br/>

  <div class="btn btn-dark">
    <%= form.submit %>
  </div>
<% end %>
