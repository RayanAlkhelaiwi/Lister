<div class="card">
  <div class="card-header">
    <h2>Log in</h2>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-group w-25">
      <%= f.label :email %><br />
      <%= f.email_field :email, class:"form-control", placeholder:"e.g. JoanaDoe@mail.com", autofocus: true, autocomplete: "email" %>
    </div>
    <br />
    <div class="field form-group w-25">
      <%= f.label :password %><br />
      <%= f.password_field :password, placeholder:"******", class:"form-control", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="field form-check">
      <%= f.check_box :remember_me, class:"form-check-input" %>
      <%= f.label :remember_me, class:"form-check-label" %>
    </div>
    <% end %>
    <br />
    <div class="actions">
      <%= f.submit "Log in", class:"btn btn-dark" %>
    </div>
    <% end %>
  </div>
</div>
<br />
<%= render "devise/shared/links" %>
