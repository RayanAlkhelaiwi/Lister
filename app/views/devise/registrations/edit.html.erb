<div class="card">
<div class="card-header"><h2>Edit Profile</h2></div>
<div class="card-body">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group w-25">
    <%= f.label :email %><br />
    <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
  </div>
  <br/>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-group w-25">
    <%= f.label :password %> <i>(if you want to change it)</i><br />
    <%= f.password_field :password, class:"form-control", autocomplete: "new-password" %>
  </div>
  <br/>
  <div class="field form-group w-25">
    <%= f.label :password_confirmation %> (<% if @minimum_password_length %><em><%= @minimum_password_length %> characters min</em><% end %>)<br/>
    <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "new-password" %>
  </div>
  <br/>
  <div class="field form-group w-25">
    <%= f.label :current_password %> <i>(to confirm change)</i><br />
    <%= f.password_field :current_password, class:"form-control", autocomplete: "current-password" %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit "Update", class:"btn btn-dark" %>
  </div>
<% end %>
</div>
</div>
<br/>

<div class="card w-25">
<div class="card-header"><h2>Danger Zone</h2></div>
  <div class="card-body">
    <h5>Delete my account</h5>
    <br/>
    <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Do you confirm deleting your account?" }, method: :delete, class:"btn btn-danger" %>
  </div>
</div>
<br/>
<%= link_to "Back", :back %>
