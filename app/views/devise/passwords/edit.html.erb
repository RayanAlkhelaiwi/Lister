<h2>Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field form-group w-25">
    <%= f.label :password, "New password" %>(<% if @minimum_password_length %><em><%= @minimum_password_length %> characters min</em><% end %>)<br />
    <%= f.password_field :password, class:"form-control", autofocus: true, autocomplete: "new-password" %>
  </div>
  <br/>
  <div class="field form-group w-25">
    <%= f.label :password_confirmation, "Confirm new password" %><br />
    <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "new-password" %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit "Change my password", class:"btn btn-dark" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
